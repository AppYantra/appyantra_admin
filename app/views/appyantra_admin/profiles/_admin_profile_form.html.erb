<div class="mini_form_box">
	<%= form_for(admin_user, :as => :admin_user, :url => url) do |f| %>	
		<fieldset class="string">
			<%= f.label :first_name %>
			<%= f.text_field :first_name %>
		</fieldset>
		<fieldset class="string">
			<%= f.label :last_name %>
			<%= f.text_field :last_name %>
		</fieldset>
		<fieldset class="string">
			<%= f.label :email %>
			<%= f.email_field :email %>
		</fieldset>			
		<%= f.submit action_label, class: 'alt_btn' %>
    <% end %>
</div>