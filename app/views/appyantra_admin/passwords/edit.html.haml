%article.module.width_quarter.landing_container
  %header
    %h3 Change your password
  .mini_form_box
    = form_for(resource, :as => resource_name, :url => main_app.admin_password_path, :html => { :method => :put }) do |f|
      = f.hidden_field :reset_password_token
      %fieldset.string
        = f.label :password, "New password"
        = f.password_field :password
      %fieldset.string
        = f.label :password_confirmation, "Confirm new password"
        = f.password_field :password_confirmation
      = f.submit "Change my password"
      .form_message
        Back to #{render :partial => "/appyantra_admin/shared/links"}
